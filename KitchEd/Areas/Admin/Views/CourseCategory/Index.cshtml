@using KitchEd.Models.ViewModels.CourseCategory
@model IEnumerable<CourseCategoryViewModel>

@{
    ViewData["Title"] = "Категории курсове";
    Layout = "_AdminLayout";
}

<div class="admin-content-header">
    <h1 class="admin-title">
        <i class="fas fa-tags me-2"></i>
        Категории курсове
    </h1>
    <a asp-area="Admin" asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus me-2"></i>
        Добави категория
    </a>
</div>

<div class="admin-table-wrapper">
    <div class="table-responsive">
        <table class="table admin-table">
            <thead>
                <tr>
                    <th scope="col" width="80">#</th>
                    <th scope="col">Име</th>
                    <th scope="col" width="200">Действия</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td>@category.CourseCategoryId</td>
                        <td>@category.Name</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-area="Admin" asp-action="Edit" asp-route-id="@category.CourseCategoryId" 
                                   class="btn btn-outline-primary btn-sm">
                                    <i class="fas fa-edit me-1"></i>
                                    Редактирай
                                </a>
                                <button type="button" class="btn btn-outline-danger btn-sm" 
                                        onclick="confirmDelete(@category.CourseCategoryId, '@category.Name')">
                                    <i class="fas fa-trash-alt me-1"></i>
                                    Изтрий
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Потвърждение за изтриване</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Сигурни ли сте, че искате да изтриете категория "<span id="categoryName"></span>"?</p>
                <p class="text-danger"><small>Това действие не може да бъде отменено.</small></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-2"></i>Отказ
                </button>
                <form id="deleteForm" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-2"></i>Изтрий
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('categoryName').textContent = name;
            document.getElementById('deleteForm').action = `/Admin/CourseCategory/Delete/${id}`;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
} 