@model KitchEd.Models.ViewModels.Auth.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container mt-4">
    <h2 class="mb-3">Регистрация</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form asp-action="Register" method="post" class="mt-3">
        @Html.AntiForgeryToken()

        <!-- Username -->
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" placeholder="Въведете потребителско име" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <!-- Email -->
        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" placeholder="Въведете email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <!-- First Name -->
        <div class="form-group">
            <label asp-for="FirstName"></label>
            <input asp-for="FirstName" class="form-control" placeholder="Въведете име" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <!-- Last Name -->
        <div class="form-group">
            <label asp-for="LastName"></label>
            <input asp-for="LastName" class="form-control" placeholder="Въведете фамилия" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <!-- Role Selection -->
        <div class="form-group">
            <label asp-for="Role"></label>
            <select asp-for="Role" class="form-control">
                <option value="@PlatformRoles.Chef">@PlatformRoles.Chef</option>
                <option value="@PlatformRoles.Student">@PlatformRoles.Student</option>
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <!-- Phone Number (Optional) -->
        <div class="form-group">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control" placeholder="Въведете телефонен номер (по избор)" />
          
        </div>

        <!-- Short Bio (Optional) -->
        <div class="form-group">
            <label asp-for="ShortBio"></label>
            <textarea asp-for="ShortBio" class="form-control" placeholder="Разкажете малко за себе си... (по избор)"></textarea>
            <span asp-validation-for="ShortBio" class="text-danger"></span>
        </div>

        <!-- Password -->
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" type="password" class="form-control" placeholder="Въведете парола" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!-- Confirm Password -->
        <div class="form-group">
            <label asp-for="ConfirmPassword"></label>
            <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Повторете паролата" />
            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success btn-block">Регистрация</button>

        <!-- Link to Login -->
        <div class="mt-2">
            <a asp-action="Login" class="btn btn-link">Вече имате акаунт? Вход</a>
        </div>
    </form>
</div>

<!-- Enable Client-side Validation -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
