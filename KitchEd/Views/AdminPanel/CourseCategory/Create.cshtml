@model CourseCategoryViewModel

@{
    ViewData["Title"] = "Нова категория";
}

<div class="admin-content-header">
    <h1 class="admin-title">
        <i class="fas fa-plus-circle me-2"></i>
        Нова категория
    </h1>
</div>

<div class="admin-form-wrapper">
    <form asp-action="Create" method="post" class="admin-form">
        @Html.AntiForgeryToken()

        <div class="row">
            <div class="col-md-8">
                <div class="form-group mb-3">
                    <label asp-for="Name" class="form-label">Име на категорията</label>
                    <input asp-for="Name" class="form-control" placeholder="Въведете име на категорията" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Запази
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times me-2"></i>Отказ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
