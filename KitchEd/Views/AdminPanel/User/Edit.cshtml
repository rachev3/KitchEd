@model UserViewModel

@{
    ViewData["Title"] = "Редактиране на потребител";
}

<div class="admin-content-header">
    <h1 class="admin-title">
        <i class="fas fa-user-edit me-2"></i>
        Редактиране на потребител
    </h1>
</div>

<div class="admin-form-wrapper">
    <form asp-action="Edit" method="post" class="admin-form">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Username" class="form-label"></label>
                    <input asp-for="Username" class="form-control" readonly />
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="form-group mb-3">
            <label asp-for="PhoneNumber" class="form-label"></label>
            <input asp-for="PhoneNumber" class="form-control" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="ShortBio" class="form-label"></label>
            <textarea asp-for="ShortBio" class="form-control" rows="3"></textarea>
            <span asp-validation-for="ShortBio" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="Role" class="form-label"></label>
            <select asp-for="Role" class="form-select" asp-items="Html.GetEnumSelectList<UserRoles>()">
            </select>
            <span asp-validation-for="Role" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save me-2"></i>Запази
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-times me-2"></i>Отказ
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
